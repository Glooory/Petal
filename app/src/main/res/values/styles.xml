        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HomePinCardViewCustom">
        <item name="android:layout_marginLeft">@dimen/quarter_activity_default_margin</item>
        <item name="android:layout_marginTop">@dimen/quarter_activity_default_margin</item>
        <item name="android:layout_marginRight">@dimen/quarter_activity_default_margin</item>
    </style>

    <style name="TextAppearancePinLikeCount">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">10sp</item>
    </style>

