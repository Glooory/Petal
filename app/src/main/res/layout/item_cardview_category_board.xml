<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CardViewCustom"
    app:cardCornerRadius="@dimen/card_corner_radius_default"
    app:cardElevation="@dimen/card_elevation_static">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <include layout="@layout/view_user_board_cover"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_a700"/>

        <LinearLayout
            android:id="@+id/ll_category_board_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/quarter_activity_default_margin"
            android:gravity="center_vertical"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/simple_drawee_view_category_board_user_avatar"
                android:layout_width="@dimen/pin_user_avatar_size"
                android:layout_height="@dimen/pin_user_avatar_size"/>

            <TextView
                android:id="@+id/text_view_category_board_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:maxLines="2"
                android:ellipsize="marquee"
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/primary_text"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_a700"/>

        <LinearLayout
            android:id="@+id/ll_user_board_operate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_heght_nomal"
            android:gravity="center"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/text_view_user_board_operate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/secondary_text"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>